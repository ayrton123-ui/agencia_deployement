extends ../layout/index 
block contenido
    main.container.mt-5
        .row
            .col-md-5
                img.img-fluid(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="Imagen de Nostros")
            .col-md-7
                h1 #{viaje.titulo}
                    p
                        i.fas.fa-calendar-alt
                            #{viaje.fecha_ida} - #{viaje.fecha_vuelta}
                    p
                        i.fas.fa-dollars-sign
                            #{viaje.precio}
                    p
                        i.fas.fa-user
                            #{viaje.disponibles}
                    p= viaje.descripcion